@model Order

@{
    ViewData["Title"] = $"Заказ №{@Model.OrderId} оформлен";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="info text-center mb-5 p-3">
                <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                <h1 class="mt-3">Заказ успешно оформлен!</h1>
                <p class="text-muted mb-3">
                    Ваш заказ №@Model.OrderId принят. Приятных Вам покупок!
                </p>
            </div>

            <div class="card mb-5">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Состав заказа</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Товар</th>
                                <th>Цена</th>
                                <th>Количество</th>
                                <th>Сумма</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.Product.Image" width="50" alt="@item.Product.Brand @item.Product.Model" class="me-3" />
                                        <a href="/Home/Details/@item.Product.Id" class="text-decoration-none">
                                            @item.Product.Brand @item.Product.Model
                                        </a>
                                    </td>
                                    <td>@item.Product.Price.ToString("C")</td>
                                    <td>@item.Quantity</td>
                                    <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end">
                        <div class="d-flex justify-content-between w-100 align-items-center">
                            <h5 class="mb-0">Итого к оплате:</h5>
                            <span class="fs-4 fw-bold text-success">
                                @Model.TotalAmount.ToString("C")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Данные покупателя</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>ФИО:</strong> @Model.LastName @Model.FirstName @(Model.MiddleName ?? "")</p>
                            <p><strong>Телефон:</strong> @Model.Phone</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Адрес доставки:</strong><br>@Model.Address</p>
                            <p><strong>Дата заказа:</strong> @Model.CreatedAt.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-left mt-5">
                <a href="/" class="btn btn-secondary">
                    Вернуться к покупкам
                </a>
            </div>
        </div>
    </div>
</div>