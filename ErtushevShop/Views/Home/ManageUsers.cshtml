@model List<User>

@{
    ViewData["Title"] = "Управление товарами";
}

@if (Model.Count == 0)
{
    <div class="text-center py-5">
        <i class="bi bi-person-fill-x text-muted" style="font-size: 3rem;"></i>
        <p class="mt-3 text-muted">Список пользователей пуст</p>
    </div>
}
else
{
    <div class="card mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Управление пользователями</h5>
        </div>
        <div class="block-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Логин</th>
                        <th>Фамилия Имя Отчество</th>
                        <th>Телефон</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Login</td>
                            <td style="width: 25%">@user.LastName @user.FirstName @user.MiddleName</td>
                            <td>@user.Phone</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td class="del-product">
                                <a href="/Home/EditUser/@user.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Home/RemoveUser/@user.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}