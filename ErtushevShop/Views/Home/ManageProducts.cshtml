@model List<Product>

@{
    ViewData["Title"] = "Управление товарами";
}

@if (Model.Count == 0)
{
    <div class="text-center py-5">
        <i class="bi bi-basket text-muted" style="font-size: 3rem;"></i>
        <p class="mt-3 text-muted">Список товаров пуст</p>
        <a href="/" class="btn btn-primary">Вернуться в каталог</a>
    </div>
}
else
{
    <div class="card mb-5">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Управление товарами</h5>
        </div>
        <div class="block-table">
            <table class="table">
                <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                        <td class="d-flex justify-content-center">
                            <a href="/Home/AddProduct" class="btn btn-group-lg btn-outline-success">
                                <i class="bi bi-plus-square"></i> Добавить товар
                            </a>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td style="width: 30%">
                                <img src="@item.Image" width="50" alt="@item.Brand @item.Model" />
                                <a href="/Home/Details/@item.Id">@item.Brand @item.Model</a>
                            </td>
                            <td style="width: 35%;">
                                <p id="paragraph" class="mb-0">@item.Description</p>
                            </td>
                            <td style="width: 20%; text-align: center;">@item.Price.ToString("C")</td>
                            <td class="del-product">
                                <a href="/Home/EditProduct/@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Home/RemoveProduct/@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}