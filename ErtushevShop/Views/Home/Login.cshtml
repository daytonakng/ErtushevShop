@{
    ViewBag.Title = "Авторизация";
}

<div class="auth-container">
    <div id="login-form">
        <h3 class="text-center">Вход</h3>
        <div class="form-group">
            <label for="login-username">Имя пользователя:</label>
            <input type="text" id="login-username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="login-password">Пароль:</label>
            <input type="password" id="login-password" class="form-control" />
        </div>
        <button id="btn-login" class="btn btn-primary mb-2">Войти</button>
        <p><a href="#" id="show-register">Нет аккаунта? Регистрация</a></p>
    </div>

    <div id="register-form" style="display: none;">
        <h3 class="text-center">Регистрация</h3>
        <div class="form-group">
            <label for="register-username">Имя пользователя:</label>
            <input type="text" id="register-username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="register-password">Пароль:</label>
            <input type="password" id="register-password" class="form-control" />
        </div>
        <button id="btn-register" class="btn btn-success mb-2">Зарегистрироваться</button>
        <p><a href="#" id="show-login">Есть аккаунт? Войти</a></p>
    </div>

    <div id="message" class="alert" style="display: none;"></div>
</div>

<style>
    .auth-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 1rem;
        font-family: Arial, sans-serif;
        background-color: white;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input.form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    button.btn {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .alert {
        margin-top: 15px;
        padding: 10px;
        border-radius: 4px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>