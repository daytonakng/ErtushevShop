@model List<Product>

@{
    ViewData["Title"] = "Купить фототехнику";
}

<div class="text-center">
    <form method="get" class="row g-3 mb-1">
        <div class="col-md-3">
            <label class="form-label">Поиск по названию</label>
            <input type="text"
                   class="form-control"
                   name="searchTerm"
                   value="@Context.Request.Query["searchTerm"]"
                   placeholder="Введите название..." />
        </div>

        <div class="col-md-3">
            <label class="form-label">Сортировка</label>
            <select class="form-select" name="sortBy">
                <option value="">Без сортировки</option>
                <option value="price_asc"
                        selected="@(Context.Request.Query["sortBy"] == "price_asc")">
                    Цена: по возрастанию
                </option>
                <option value="price_desc"
                        selected="@(Context.Request.Query["sortBy"] == "price_desc")">
                    Цена: по убыванию
                </option>
                <option value="name_asc"
                        selected="@(Context.Request.Query["sortBy"] == "name_asc")">
                    Название: А→Я
                </option>
                <option value="name_desc"
                        selected="@(Context.Request.Query["sortBy"] == "name_desc")">
                    Название: Я→А
                </option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Категория</label>
            <select class="form-select" name="selectedCategory">
                <option value="">Все категории</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category"
                            selected="@(Context.Request.Query["selectedCategory"] == category)">
                        @category
                    </option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Бренд</label>
            <select class="form-select" name="selectedBrand">
                <option value="">Все бренды</option>
                @foreach (var brand in ViewBag.Brands)
                {
                    <option value="@brand"
                            selected="@(Context.Request.Query["selectedBrand"] == brand)">
                        @brand
                    </option>
                }
            </select>
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Применить</button>
            <a href="/" class="btn btn-secondary ms-2">Сбросить</a>
        </div>
    </form>
    <div class="row mt-1 mb-2">

        @if (!Model.Any())
        {
            <h3 class="mb-4">Товары не найдены</h3>
        }
        else
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="d-flex justify-content-center align-items-center" style="height: 200px; padding-top: 1rem">
                                @if (!string.IsNullOrEmpty(product.Image))
                                {
                                    <img src="@product.Image" class="img-fluid rounded" alt="@product.Brand @product.Model" style="max-height: 100%; max-width: 100%;">
                                }
                                else
                                {
                                    <span class="text-muted">Изображение отсутствует</span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column justify-content-between">
                                <a class="card-title-a" href="/Home/Details/@product.Id" >
                                    <h5 class="card-title">@product.Brand @product.Model</h5>
                                </a>
                                <p class="card-text text-secondary fst-italic">
                                    @product.Category
                                </p>
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    <p id="paragraph" class="card-text">@product.Description</p>
                                }
                                <div class="d-flex justify-content-between mt-auto">
                                    <span class="h5 text-primary">
                                        @string.Format("{0:C}", product.Price)
                                    </span>
                                    <div class="d-flex gap-2">
                                        <form class="add-to-cart-form" asp-action="AddToCart" method="post" onsubmit="showAddToCartToast()">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit"
                                                class="btn btn-sm btn-outline-success"
                                                    onclick="handleAddToCart(this)">
                                                <i class="bi bi-basket"></i> Купить
                                            </button>
                                        </form>

                                        <form asp-action="AddToFavorite" method="post">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    title="В избранное">
                                                <i class="bi bi-heart"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
