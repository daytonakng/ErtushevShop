@model List<CartItem>

@{
    ViewData["Title"] = "Корзина";
}

@if (Model.Count == 0)
{
    <div class="text-center py-5">
        <i class="bi bi-basket text-muted" style="font-size: 3rem;"></i>
        <p class="mt-3 text-muted">Ваша корзина пуста</p>
        <a href="/" class="btn btn-primary">Вернуться в каталог</a>
    </div>
}
else
{
    <div class="block-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Товар</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Сумма</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.Image" width="50" alt="@item.Product.Brand @item.Product.Model" />
                            <a href="/Home/Details/@item.Product.Id">@item.Product.Brand @item.Product.Model</a>
                        </td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.ProductId" />
                                <input type="number" name="quantity" value="@item.Quantity" min="1" style="width:60px;" />
                                <button type="submit" 
                                    class="btn btn-sm btn-outline-primary"
                                    title="Обновить">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                            </form>
                        </td>
                        <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                        <td class="del-product">
                            <form asp-action="RemoveFromCart" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.ProductId" />
                                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between align-items-center">
            <h5>Итого:</h5>
            <span class="fs-4 fw-bold">
                @string.Format("{0:C}", @Model.Sum(item => item.Product.Price * item.Quantity))
            </span>
        </div>
    </div>

    <!-- Кнопки действий -->
    <div class="actions mt-3 mb-5 d-flex justify-content-between">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Вернуться к каталогу</a>
        <button class="btn btn-success" id="orderBtn" onclick="showOrderForm('order-block')">Оформить заказ</button>
    </div>
    <div class="col-lg-4" id="order-block">
        <div class="card">
            <div class="card-header">
                <h5>Оформление заказа</h5>
            </div>
            <div class="card-body">
                <form id="orderForm">
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Фамилия</label>
                        <input type="text" class="form-control" id="lastName" required>
                    </div>
                    <div class="mb-3">
                        <label for="firstName" class="form-label">Имя</label>
                        <input type="text" class="form-control" id="firstName" required>
                    </div>
                    <div class="mb-3">
                        <label for="middleName" class="form-label">Отчество</label>
                        <input type="text" class="form-control" id="middleName">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Телефон</label>
                        <input type="tel" class="form-control" id="phone" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Адрес доставки</label>
                        <textarea class="form-control" id="address" rows="3" required style="resize: none;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        Оформить заказ
                    </button>
                </form>
            </div>
        </div>
    </div>
}

<style>
    .total {
        margin-top: 20px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
    }

    .actions {
        margin-top: 20px;
    }
</style>